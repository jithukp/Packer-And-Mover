<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.packer_and_mover_and">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/shipping"
        android:label="Packer And Mover"
        android:roundIcon="@drawable/shipping"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".view_worker_more"></activity>
        <activity android:name=".view_bill" />
        <activity android:name=".driver_qr" />
        <activity android:name=".submit_reason" />
        <activity android:name=".payment" />
        <activity android:name=".driver_view_work_more" />
        <activity android:name=".send_rating1" />
        <activity android:name=".view_cart" />
        <activity android:name=".enter_quantity" />
        <activity android:name=".view_my_list" />
        <activity android:name=".view_request" />
        <activity android:name=".view_worker_request" />
        <activity android:name=".view_worker_bill" />
        <activity android:name=".payment2" />
        <activity
            android:name=".driver_home"
            android:label="@string/title_activity_driver_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".user_home"
            android:label="@string/title_activity_user_home"
            android:theme="@style/AppTheme.NoActionBar" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".registration_main" />
        <activity android:name=".driver_registration" />
        <activity android:name=".view_request_items" />
        <activity android:name=".view_worker" />
        <activity android:name=".driver_view_work" />
        <activity android:name=".driver_view_rescheduled_work" />
        <activity android:name=".driver_view_payment" />

        <service android:name=".Locationservice" />
    </application>

</manifest>